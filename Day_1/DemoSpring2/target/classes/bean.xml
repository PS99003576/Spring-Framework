<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id = "Employee" class = "com.roshan.DemoSpring2.Employee">
<constructor-arg name = "empId" value = "101"></constructor-arg>
<constructor-arg name = "empName" value = "zameer"></constructor-arg>
<constructor-arg name = "empAddress" value = "Mysore"></constructor-arg>
</bean>

<bean id = "Employee1" class = "com.roshan.DemoSpring2.Employee" >
<property name = "empId" value = "102"></property>
<property name = "empName" value = "zameer1"></property>
<property name = "empAddress" value = "Mysore1"></property>
</bean>

</beans>